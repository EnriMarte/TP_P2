    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/css/uikit.min.css" />

    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/js/uikit-icons.min.js"></script>
</head>

<body>
    <%if (usuarioLogueado == undefined){%>
        <% include partials/header %>
        <%}else{%>
         <% include partials/headerLog %>
        <%}%>


    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container">
                <form action="modificar" method="POST">
                    <fieldset class="uk-fieldset">
                        <% if(typeof errorsMod !== 'undefined') { %>
                            <div class="uk-alert-danger" uk-alert>
                                <a class="uk-alert-close" uk-close></a>
                                <p> El mail ya se ha utilizado</p>
                            </div>
                        <% } %>
                        <legend class="uk-legend"> Modificar </legend>
                        <div class="uk-margin">
                            <input name="nombre" class="uk-input" type="text" value="<%= usuarioLogueado.nombre %>">
                        </div>
                        <div class="uk-margin">
                            <input name="apellido" class="uk-input" type="text" value="<%= usuarioModificar.apellido %>">
                        </div>
                        <div class="uk-margin">
                            <input name="username" class="uk-input" type="text" value="<%= usuarioLogueado.username %>">
                        </div>
                        <div class="uk-margin">
                            <input name="email" class="uk-input" type="email" value="<%= usuarioLogueado.mail %>">
                        </div>
                        <div class="uk-margin">
                            <input name="password" class="uk-input" type="password" >
                        </div>
                        <div class="uk-margin">
                            <input name="telefono" class="uk-input" type="number" value="<%= usuarioLogueado.telefono %>">
                        </div>
                        <div class="uk-margin">
                            <input name="fotoPerfil" class="uk-input" type="text" value="<%= usuarioLogueado.fotoPerfil %>">
                        </div>
                        <div class="uk-margin">
                            <input type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" value="Realizar los cambios"></input>
                        </div>

                
                    </fieldset>
                </form>
            </div>
        </div>
    </main>

    <% include partials/footer %>

</body>

</html>