<body>
    <%if (usuarioLogueado == undefined){%>
        <% include partials/header %>
        <%}else{%>
         <% include partials/headerLog %>
        <%}%>


    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                
                <form action="/user/login" method="POST">
                    <fieldset class="uk-fieldset">
                
                        <legend class="uk-legend"> Pregunta de seguridad </legend>
                        <div class="uk-margin">
                            <input name="username" class="uk-input" type="text" placeholder="Mail">
                        </div>
                        <div class="uk-margin">
                            <select id="preguntaSeguridad" name="preguntaSeguridad" class="uk-input" form="preguntas">
                                <option value="mascota" class="uk-input">¿Como es el nombre de tu mascota?</option>
                                <option value="vacaciones" class="uk-input">¿Cual es tu lugar preferido para vacacionar?</option>
                                <option value="nacimiento" class="uk-input">¿Cual es el nombre de tu mejor amigo de la infancia?</option>
                            </select>
                        </div>
                        <div class="uk-margin">
                            <input name="username" class="uk-input" type="text" placeholder="Respuesta">
                        </div>
                        <div class="uk-margin">
                            <input type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" value="Verificar respuesta"></input>
                        </div>
                
                    </fieldset>
                </form>
            </div>
        </div>
    </main>

    <% include partials/footer %>


